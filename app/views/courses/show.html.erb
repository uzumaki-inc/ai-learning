<main>
  <div class="px-4 pt-6">
    <% @course.chapters.each do |chapter| %>
      <div class="rounded-lg border bg-card text-card-foreground shadow-sm relative group bg-white">
        <div class="flex flex-col space-y-1.5 p-6">
          <h2 class="text-lg font-semibold"><%= chapter.title %></h2>
        </div>

        <div class="p-6">
          <% chapter.topics.each do |topic| %>
            <div class="flex items-center space-x-2 my-4 border bg-card text-card-foreground shadow-sm p-4">
              <h3 class="text-lg">
                <%= link_to topic.title, '#' %>
              </h3>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</main>
